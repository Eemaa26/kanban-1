!!! Strict 
%html
  %head 
    %title BanKan:: kanban can ban scrum!
    = stylesheet_link_tag 'compiled/main.css', :media => 'screen, projection'
    = javascript_include_tag 'jquery-1.3.1.js'
    = javascript_include_tag 'jquery-ui-1.7.2.custom.js'
    = javascript_include_tag 'jquery.utils.js'
    = javascript_include_tag 'application.js'
    = javascript_include_tag 'jquery.simplemodal-1.3.min.js'
    = javascript_include_tag 'joose.js'
    = javascript_include_tag 'controller.js'
    = javascript_include_tag 'item_controller.js'
    = js_behavior 
  %body
    #topnav_container
      #topnav

        %ul
          %li
            %h1 KanBan
          -if logged_in?
            %li=link_to "Projects"
            %li=link_to "Logout", user_sessions_url, :method => :delete
          
    - if logged_in?
      -# TODO remove temporary solution
      - @project ||= Project.first
      #sub_header_container
        #sub_header
          #heading
            %h1= "Project: #{@project.name}"
          #sub_nav
            = link_to "Backlog", backlog_url(@project)  
            = link_to "Dashboard", dashboard_url(@project)
            = link_to "Livelog"

    #content
      = @content_for_layout


    %script
      $(document).ready(function () {
      = yield :dom_ready
      });